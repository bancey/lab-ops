{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "flux": {
    "fileMatch": [
      "^kubernetes/.*\\.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "^kubernetes/.*\\.yaml$"
    ],
    "ignorePaths": [
      "**/gotk-components.yaml"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^ansible/k3s.yaml$"],
      "matchStrings": ["k3s_version: \"(?<currentValut>.*?)\""],
      "depNameTemplate": "k3s-io/k3s",
      "datasourceTemplate": "github-releases"
    }
  ]
}